<h1> Edit a Landmark: </h1>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <label> Name: </label>
    <input type="text" id="name" name="landmark[name]" placeholder="<%= @landmark.name %>">

  <label> Year Completed: </label>
    <input type="text" id="year_completed" name="landmark[year_completed]" placeholder="<%= @landmark.year_completed %>">

  <input type="submit" value="Save">

</form>
